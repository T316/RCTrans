@model RCTrans.Web.ViewModels.Blog.ArticleCreateInputModel
@{
    ViewData["Title"] = "Довавяне на статия";
}

<div class="row pages-padding">
    <div class="col-md-3"></div>
    <div class="col-md-6">
        <div class="col-lg-12">
            <div class="section-title  text-center">
                <h2>@ViewData["Title"]</h2>
                <span class="title-line"><i class="fa fa-car"></i></span>
            </div>
        </div>

        <script src="~/lib/tinymce/tinymce.min.js" type="text/javascript"></script>
        <script type="text/javascript">
            tinymce.init({
                selector: "textarea",
                plugins: [
                    "image paste table link code media"
                ]
            });
        </script>

        <form method="post">
            <div class="theme-form">
                <label asp-for="Title"></label>
                <input asp-for="Title" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <div class="theme-form">
                <label asp-for="Content"></label>
                <textarea rows="15" asp-for="Content"></textarea>
                <span asp-validation-for="Content" class="text-danger"></span>
            </div>
            <div class="theme-form">
                <label asp-for="ImageUrl"></label>
                <input asp-for="ImageUrl" />
                <span asp-validation-for="ImageUrl" class="text-danger"></span>
            </div>
            <button type="submit" class="btn theme-btn">Добави</button>
        </form>
    </div>
</div>