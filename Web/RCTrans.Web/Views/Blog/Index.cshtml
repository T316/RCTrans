@using System.Globalization;
@model RCTrans.Web.ViewModels.Blog.IndexViewModel
@{
    ViewData["Title"] = "Блог";
}

<div id="blog-page-content" class="pages-padding">
    <div class="container">
        <div class="col-lg-12">
            <div class="section-title  text-center">
                <h2>@ViewData["Title"]</h2>
                <span class="title-line"><i class="fa fa-car"></i></span>
                <p>Полезни и интересни статий.</p>
            </div>
        </div>
        <div class="row">
            @{
                int iteration = 1;
            }
            @foreach (var article in @Model.Articles)
            {
                @if (iteration % 2 == 1)
                {
                    <div class="col-lg-12">
                        <article class="single-article">
                            <div class="row">
                                <div class="col-lg-5">
                                    <div class="article-thumb">
                                        <img class="article-index-img" src="@article.ImageUrl" alt="JSOFT">
                                    </div>
                                </div>
                                <div class="col-lg-7">
                                    <div class="display-table">
                                        <div class="display-table-cell">
                                            <div class="article-body">
                                                <h3><a href="article-details.html">@article.Title</a></h3>
                                                <div class="article-meta">
                                                    @*<a href="#" class="author">By :: <span>Admin</span></a>
                                                        <a href="#" class="commnet">Comments :: <span>10</span></a>*@
                                                </div>

                                                <div class="article-date">@article.CreatedOn.Date.Day <span class="month">@article.CreatedOn.ToString("MMM", CultureInfo.CreateSpecificCulture("bg-BG"))</span></div>

                                                <p>
                                                    @Html.Raw(article.ShortSanitizedContent)
                                                </p>

                                                <a class="readmore-btn" asp-area="" asp-controller="Blog" asp-action="Article" asp-route-id="@article.Id">Прочети <i class="fa fa-long-arrow-right"></i></a>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </article>
                    </div>
                }
                else
                {
                    <div class="col-lg-12">
                        <article class="single-article middle">
                            <div class="row">
                                <div class="col-lg-5 d-xl-none">
                                    <div class="article-thumb">
                                        <img class="article-index-img" src="@article.ImageUrl" alt="JSOFT">
                                    </div>
                                </div>
                                <div class="col-lg-7">
                                    <div class="display-table">
                                        <div class="display-table-cell">
                                            <div class="article-body">
                                                <h3><a href="article-details.html">@article.Title</a></h3>
                                                <div class="article-meta">
                                                    @*<a href="#" class="author">By :: <span>Admin</span></a>
                                                        <a href="#" class="commnet">Comments :: <span>10</span></a>*@
                                                </div>

                                                <div class="article-date">@article.CreatedOn.Date.Day <span class="month">@article.CreatedOn.ToString("MMM", CultureInfo.CreateSpecificCulture("bg-BG"))</span></div>

                                                <p>
                                                    @Html.Raw(article.ShortSanitizedContent)
                                                </p>

                                                <a class="readmore-btn" asp-area="" asp-controller="Blog" asp-action="Article" asp-route-id="@article.Id">Прочети <i class="fa fa-long-arrow-right"></i></a>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-lg-5 d-none d-xl-block">
                                    <div class="article-thumb">
                                        <img class="article-index-img" src="@article.ImageUrl" alt="JSOFT">
                                    </div>
                                </div>
                            </div>
                        </article>
                    </div>
                }

                iteration++;
            }
        </div>
    </div>
</div>