@using RCTrans.Common
@model RCTrans.Web.ViewModels.Blog.ArticleViewModel
@{
    ViewData["Title"] = "Статия";
}

<section id="car-list-area" class="edit-article-pages-padding">
    <div class="container">
        <div class="row">
            <div class="col-lg-1"></div>
            <div class="col-lg-10">
                <div class="car-details-content article-title">
                    <h2>@Model.Title</h2>
                    <div>
                        <img class="img-thumbnail article-img" src="@Model.ImageUrl" alt="JSOFT">
                    </div>
                    <div class="car-details-info blog-content">
                        @Html.Raw(Model.Content)
                    </div>
                    <div class="col-3 edit-article-btns">
                        @if (this.User.IsInRole(GlobalConstants.AdministratorRoleName))
                        {
                            <a class="btn edit-btn" asp-area="" asp-controller="Blog" asp-action="EditArticle" asp-route-id="@Model.Id">Промени</a>
                        }
                        @if (this.User.IsInRole(GlobalConstants.AdministratorRoleName))
                        {
                            <a class="btn delete-btn" asp-area="" asp-controller="Blog" asp-action="DeleteArticle" asp-route-id="@Model.Id">Изтрий</a>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>