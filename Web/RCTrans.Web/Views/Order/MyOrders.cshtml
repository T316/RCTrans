@using System.Globalization;
@model RCTrans.Web.ViewModels.Order.MyOrdersViewModel
@{
    ViewData["Title"] = "Моите поръчки";
}

<div id="blog-page-content" class="pages-padding">
    <div class="container">
        <div class="col-lg-12">
            <div class="section-title  text-center">
                <h2>@ViewData["Title"]</h2>
                <span class="title-line"><i class="fa fa-car"></i></span>
            </div>
        </div>
        <div class="row">
            @if (Model.Orders.Count() == 0)
            {
                <div class="col-lg-1"></div>
                <div class="col-lg-10 text-center">
                    <h5>Все още нямате поръчки.</h5>
                    <br />
                    <br />
                    <br />
                    <h5>Направете своята първа поръчка сега!</h5>
                    <br />
                    <div class="d-flex justify-content-center">
                        <a class="theme-btn my-order-btn" asp-area="" asp-controller="Autopark" asp-action="Cars">Резервирай кола</a>
                    </div>
                    <div class="d-flex justify-content-center">
                        <a class="theme-btn my-order-btn" asp-area="" asp-controller="Autopark" asp-action="Buses">Резервирай бус</a>
                    </div>
                    <div class="d-flex justify-content-center">
                        <a class="theme-btn my-order-btn" asp-area="" asp-controller="Autopark" asp-action="Autobuses">Резервирай автобус</a>
                    </div>
                </div>

            }
            @foreach (var order in @Model.Orders)
            {
                <div class="col-lg-1"></div>
                <div class="col-lg-10">
                    <div class="single-article">
                        <div class="row">
                            <div class="col-lg-6">
                                <div>
                                    <img class="article-index-img" src="@order.Vehicle.ImageURL" alt="JSOFT">
                                </div>
                            </div>
                            <div class="col-lg-6">
                                <div class="display-table">
                                    <div class="display-table-cell">
                                        <div class="article-body">
                                            <h3><a href="article-details.html">@order.Vehicle.Manufacturer @order.Vehicle.Model</a></h3>

                                            <p>Дата на наемане: @order.CreatedOn.ToString("dd.MM.yyyy", CultureInfo.CreateSpecificCulture("bg-BG"))</p>
                                            <p>Дата на вземане: @order.StartDate.ToString(CultureInfo.CreateSpecificCulture("bg-BG"))</p>
                                            <p>Дата на връщане: @order.EndDate.ToString(CultureInfo.CreateSpecificCulture("bg-BG"))</p>

                                            <br />
                                            <br />
                                            <p>
                                                Цена: @order.Price
                                            </p>

                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-lg-1"></div>
            }
        </div>
    </div>
</div>